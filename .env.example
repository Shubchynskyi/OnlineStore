# ==============================================
# OnlineStore - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to Git!

# ==============================================
# PostgreSQL Configuration
# ==============================================
POSTGRES_USER=store
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=online_store
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=change_me_in_production
# Keep POSTGRES_REPLICATION_USER in sync with infrastructure/docker/postgres/pg_hba.conf

# ==============================================
# Redis Configuration
# ==============================================
REDIS_PASSWORD=

# ==============================================
# RabbitMQ Configuration
# ==============================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change_me_in_production

# ==============================================
# Keycloak Configuration
# ==============================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_in_production

# Keycloak Client Secrets (generated after realm creation)
KEYCLOAK_BACKEND_CLIENT_SECRET=
KEYCLOAK_BOT_CLIENT_SECRET=

# ==============================================
# MinIO (S3-compatible storage)
# ==============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_in_production

# ==============================================
# Monitoring Stack
# ==============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production

# ==============================================
# Vault (Secrets Management)
# ==============================================
VAULT_ROOT_TOKEN=dev-root-token  # dev mode only
VAULT_ADDR=http://localhost:8200

# ==============================================
# Application Configuration
# ==============================================

# API Gateway
GATEWAY_PORT=8080
GATEWAY_JWT_ISSUER_URI=http://localhost:8180/realms/online-store

# Backend Service
BACKEND_PORT=8081

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_MANAGER_CHAT_ID=

# ==============================================
# Payment Providers
# ==============================================

# Card payments (provider)
PAYMENTS_CARD_API_KEY=sk_test_...
PAYMENTS_CARD_WEBHOOK_SECRET=whsec_...
PAYMENTS_CARD_ENABLED=true

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox  # sandbox or live
PAYPAL_ENABLED=false

# Bank transfer
BANK_TRANSFER_IBAN=
BANK_TRANSFER_BENEFICIARY=
BANK_TRANSFER_ENABLED=false

# Crypto (optional)
CRYPTO_API_KEY=
CRYPTO_WEBHOOK_SECRET=
CRYPTO_ENABLED=false

# ==============================================
# Shipping Providers
# ==============================================

# DHL
DHL_API_KEY=
DHL_ACCOUNT_NUMBER=
DHL_ENABLED=true

# DPD
DPD_API_KEY=
DPD_ENABLED=false

# GLS
GLS_API_KEY=
GLS_ENABLED=false

# FedEx
FEDEX_API_KEY=
FEDEX_ACCOUNT_NUMBER=
FEDEX_ENABLED=false

# Nova Poshta (Ukrainian market)
NOVAPOSHTA_API_KEY=
NOVAPOSHTA_ENABLED=false

# ==============================================
# AI Configuration
# ==============================================

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# Claude (alternative)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Which AI to use: openai or claude
AI_PROVIDER=openai

# ==============================================
# Notification Providers
# ==============================================

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourstore.com
SENDGRID_FROM_NAME=YourStore

# Twilio (SMS - optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS_JSON=

# ==============================================
# OpenTelemetry / Observability
# ==============================================
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14250
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1  # 10% sampling in production, 1.0 in dev

# ==============================================
# Spring Boot Profiles
# ==============================================
SPRING_PROFILES_ACTIVE=dev  # dev, staging, production

# ==============================================
# Security
# ==============================================
JWT_SECRET=change_me_to_random_256bit_key_in_production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ==============================================
# Feature Flags (optional)
# ==============================================
FEATURE_AI_CHAT_ENABLED=true
FEATURE_PRODUCT_RECOMMENDATIONS_ENABLED=true
FEATURE_LOYALTY_PROGRAM_ENABLED=false
